<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.review">
	<insert id="insert" parameterType="review">
		insert into review values(#{res_name}, #{type_of_food}, #{rating}, #{rev_content}, sysdate)
	</insert>
	<select id="list" resultType="review">
		select * from review
	</select>
	<!-- <select id="category" parameterType="String" resultType="review"> ajax위해 필요한 사전작업
		select * from review where category=#{category}
	</select> -->
</mapper>